<!DOCTYPE html><html>	<head>		<title>New Project</title>		<style type="text/css">			form * {				display: block;			}			div {				padding-left: 20px;			}			.author, .content{				display: inline;			}			.author {				font-weight: bold;			}			.error {				color: red;			}		</style>		<script type=text/javascript src=../static/client.js></script>	</head>	<body>		<h1>The Dojo Message Board</h1>		<hr>		<form action="/message" method="post">			Name:			<input type="text" name="name">			<span class="error"><%= e.m.n %></span>			Message:			<textarea name="message"></textarea>			<span class="error"><%= e.m.c %></span>			<input type="submit" value="Post Message">		</form>		<% for (var m in messages) { %>			<div class="message">				<span class="author"><%= messages[m].author %>:</span>				<span class="content"><%= messages[m].text %></span>				<% for (var c = 0; c < messages[m].comments.length; c++) { %>					<div class="comment">						<span class="author"><%= messages[m].comments[c].author %>:</span>						<span class="content"><%= messages[m].comments[c].text %></span>					</div>				<% } %>				<form action="/comment" method="post">					Name:					<input type="text" name="name">					<span class="error"><%= e.c.n %></span>					Comment:					<textarea name="comment"></textarea>					<span class="error"><%= e.c.c %></span>					<input type="hidden" name="_message" value="<%= messages[m]._id %>">					<input type="submit" value="Post Comment">				</form>			</div>		<% } %>	</body></html>